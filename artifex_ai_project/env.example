# ArtifexAI Configuration Example
# Copy this file to .env and modify as needed

# Application
APP_NAME=ArtifexAI API
APP_VERSION=7.0.0
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS (comma-separated list)
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501,http://localhost:3000

# Database
DATABASE_URL=sqlite:///data/artist_database.db

# Model Paths
MODEL_PATH=../../art_auction_project/artifacts/art_price_model.pkl
PREPROCESSOR_PATH=../../art_auction_project/artifacts/preprocessor.pkl

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg

# Image Processing
IMAGE_RESIZE_SIZE=64,64

# Business Logic
CURRENT_YEAR=2024
DEFAULT_ARTIST_FREQUENCY=1
DEFAULT_ARTIST_MEDIAN_PRICE=500.0
DEFAULT_ARTIST_PRICE_STD=250.0

# Logging
LOG_LEVEL=INFO
